<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>Assignment03</display-name>
  <welcome-file-list>
    <welcome-file>form.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>inventory-file</param-name>
    <param-value>/WEB-INF/etc/inventory.csv</param-value>
  </context-param>
  <servlet>
    <servlet-name>display</servlet-name>
    <servlet-class>org.mcgill.ccs2_505.assignment02.servlets.DisplayInventory</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>display</servlet-name>
    <url-pattern>/displayInventory.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>update</servlet-name>
    <servlet-class>org.mcgill.ccs2_505.assignment02.servlets.UpdateInventory</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>update</servlet-name>
    <url-pattern>/updateInventory.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>test</servlet-name>
    <servlet-class>org.mcgill.ccs2_505.assignment02.listeners.TestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>test</servlet-name>
    <url-pattern>/test.do</url-pattern>
  </servlet-mapping>
  
  <listener>
    <listener-class>org.mcgill.ccs2_505.assignment02.listeners.InventoryListener</listener-class>
  </listener>
  
  <listener>
        <listener-class>org.mcgill.ccs2_505.assignment02.listeners.TestServlet</listener-class>
    </listener>
</web-app>