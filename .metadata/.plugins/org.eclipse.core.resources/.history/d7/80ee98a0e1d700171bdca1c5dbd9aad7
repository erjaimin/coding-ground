package com.mvc.controller;

import com.mvc.model.PerspectiveModel;
import com.mvc.view.BottomPerspectiveView;
import com.mvc.view.PerspectiveView;
import com.mvc.view.TopPerspectiveView;

public class ZoomCommand implements ViewActionCommand {

	private PerspectiveModel model;
	private PerspectiveView view;
	
	public ZoomCommand(PerspectiveView view, PerspectiveModel model) {
		this.model = model;
		this.view = view;
	}
	
	@Override
	public void execute() {
		if(this.view instanceof TopPerspectiveView){
			((TopPerspectiveView)this.view).updateView();
		}else if(this.view instanceof BottomPerspectiveView){
			((BottomPerspectiveView)this.view).updateView();
		}
	}

}
