package com.mvc.controller;

import java.awt.image.BufferedImage;
import java.io.File;

import com.main.ImageUtil;
import com.mvc.model.PerspectiveModel;

public class ZoomCommand implements ViewActionCommand {

	private double zoom =1.0;
	private PerspectiveModel model;
	private int notches;
	
	public ZoomCommand(PerspectiveModel model, int notches) {
		this.model = model;
		this.setNotches(notches);
		calculateZoom();
	}
	
	private void calculateZoom() {
		double temp = Math.max(zoom - (getNotches() * 0.2), 1.0);
		if (temp != zoom) {
            zoom = temp;
        }
	}

	@Override
	public void execute() {
		BufferedImage image = model.getImage();
		if(image != null){
			model.setImage(ImageUtil.getScaledImage(image, (int)(image.getWidth()*zoom), (int)(image.getHeight()*zoom)));
		}	
	}

	/**
	 * @param notches the notches to set
	 */
	public void setNotches(int notches) {
		this.notches = notches;
	}

}
