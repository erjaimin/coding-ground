package com.mvc.view;

import java.awt.BorderLayout;
import java.awt.GridLayout;

import javax.swing.JFrame;

import com.main.Constants;
import com.main.PatternObjectFactroy;

public class MainFrame extends JFrame{
	

	public MainFrame() {
		super();
		setBounds(100, 100, 450, 300);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		getContentPane().setLayout(new BorderLayout(0, 0));
		addComponents();
	}

	private void addComponents() {
		add(PatternObjectFactroy.getJpanel(Constants.IMAGE_VIEW));
		add(PatternObjectFactroy.getJpanel(Constants.TOP_VIEW));
		add(PatternObjectFactroy.getJpanel(Constants.BOTTOM_VIEW));
		
	}
}
