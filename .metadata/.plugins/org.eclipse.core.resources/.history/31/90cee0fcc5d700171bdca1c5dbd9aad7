package com.main;

import java.awt.Image;
import java.awt.image.BufferedImage;
import java.io.File;

import javax.imageio.ImageIO;

import com.mvc.model.ImageModel;

public class ImageUtil {

	public static Image getScaledImage(File file, int width, int height){
		BufferedImage bufImage = ImageIO.read(file);
		image = bufImage.getScaledInstance(this.getWidth(), this.getHeight()/4, Image.SCALE_SMOOTH);
	}
}
