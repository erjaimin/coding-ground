package com.mvc.view;

import java.awt.Graphics;
import java.awt.Image;
import java.util.Observable;
import java.util.Observer;

import javax.swing.JPanel;

import com.main.ImageUtil;
import com.mvc.model.ImageModel;

public abstract class PerspectiveView extends JPanel implements Observer{
	
	private Image image;
	
	@Override
	public void update(Observable obv, Object arg) {
		if(obv != null && obv instanceof ImageModel){
			this.image = ImageUtil.getScaledImage(((ImageModel)obv).getInputFile(), this.getWidth(), this.getHeight(), false);
		}
		repaint(); 
	}
	
	@Override
    protected void paintComponent(Graphics g) {
        super.paintComponent(g);
        g.drawImage(this.image, 0, 0, this); // see javadoc for more info on the parameters            
    }
}
