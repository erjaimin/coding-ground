package com.main;

import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;
import javax.swing.JPanel;
import javax.swing.JSplitPane;

import com.mvc.view.BottomPerspectiveView;
import com.mvc.view.ImageView;
import com.mvc.view.TopPerspectiveView;

public class PatternObjectFactroy {

	public static JPanel getJpanel(String viewName){
		if(viewName.equals(Constants.IMAGE_VIEW)){
			return new ImageView();
		}else if(viewName.equals(Constants.TOP_VIEW)){
			return new TopPerspectiveView();
		}else if(viewName.equals(Constants.BOTTOM_VIEW)){
			return new BottomPerspectiveView();
		}
		return null;
	}
	
	public static JMenuBar getJMenuBar(){
		return new JMenuBar();
	}
	
	public static JSplitPane getJSplitPane(){
		return new JSplitPane();
	}
	
	public static JMenu getJMenu(String menuName){
		return new JMenu(menuName);
	}
	
	public static JMenuItem getJMenuItem(String menuItemName){
		return new JMenuItem(menuItemName);
	}

	public static JMenuBar buildJMenuBar(String... args) {
		JMenuBar menuBar = new JMenuBar();
		for(String str : args){
			menuBar.add(new JMenu(str));
		}
		return menuBar;
	}
}
