package com.mvc.controller;

import com.mvc.model.PerspectiveModel;

public class TranslateCommand implements ViewActionCommand{

	private PerspectiveModel model;
	
	public TranslateCommand(PerspectiveModel model) {
		this.setModel(model);
	}

	@Override
	public void execute() {
		getModel().updatePositions(positionX, positionY);
	}

	/**
	 * @return the model
	 */
	public PerspectiveModel getModel() {
		return model;
	}

	/**
	 * @param model the model to set
	 */
	public void setModel(PerspectiveModel model) {
		this.model = model;
	}
}
