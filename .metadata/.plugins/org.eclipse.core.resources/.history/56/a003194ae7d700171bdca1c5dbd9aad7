package com.main;

import java.awt.Image;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import javax.imageio.ImageIO;

public class ImageUtil {

	public static Image getScaledImage(File file, int width, int height, boolean convert){
		if(file != null){
			BufferedImage bufImage;
			try {
				bufImage = ImageIO.read(file);
				if(convert)
					return getScaledImage(bufImage, width, height, Image.SCALE_SMOOTH);
				else
					return bufImage;
			} catch (IOException e) {
				System.out.println("Error reading the input file");
				System.err.println(e.getMessage());
			}
		}
		return null;
	}

	public static BufferedImage readImage(File selectedFile) {
		BufferedImage bufImage = null;
		if(selectedFile != null){
			try {
				bufImage = ImageIO.read(selectedFile);
			} catch (IOException e) {
				System.out.println("Error reading the input file");
				System.err.println(e.getMessage());
			}
		}
		return bufImage;
	}
	
	public static Image getScaledImage(BufferedImage bufImage, int width, int height){
		if(bufImage != null){
			return bufImage.getScaledInstance(width, height, Image.SCALE_SMOOTH);
		}
		return null;
	}
}
